#!/bin/bash
set -e

# ------------------------------------------------------------------------------
# environment
# ------------------------------------------------------------------------------
BASEDIR=$(dirname $0)
source $BASEDIR/scripts/common

# ------------------------------------------------------------------------------
# kratos
# ------------------------------------------------------------------------------
bash $BASEDIR/scripts/kratos/registration
bash $BASEDIR/scripts/kratos/login

# ------------------------------------------------------------------------------
# adm
# ------------------------------------------------------------------------------
bash $BASEDIR/scripts/adm/hello

# ------------------------------------------------------------------------------
# pri
# ------------------------------------------------------------------------------
bash $BASEDIR/scripts/pri/hello

# domain
bash $BASEDIR/scripts/pri/domain/add
bash $BASEDIR/scripts/pri/domain/get
bash $BASEDIR/scripts/pri/domain/update
bash $BASEDIR/scripts/pri/domain/disable
bash $BASEDIR/scripts/pri/domain/enable
bash $BASEDIR/scripts/pri/domain/del

for i in $(seq 1 10); do
    bash $BASEDIR/scripts/pri/domain/add
done
bash $BASEDIR/scripts/pri/domain/list
bash $BASEDIR/scripts/pri/domain/list-enabled

# room
bash $BASEDIR/scripts/pri/room/add
bash $BASEDIR/scripts/pri/room/get
bash $BASEDIR/scripts/pri/room/update
bash $BASEDIR/scripts/pri/room/disable
bash $BASEDIR/scripts/pri/room/enable
bash $BASEDIR/scripts/pri/room/del

for i in $(seq 1 10); do
    bash $BASEDIR/scripts/pri/room/add
done
bash $BASEDIR/scripts/pri/room/list
bash $BASEDIR/scripts/pri/room/list-enabled

# ------------------------------------------------------------------------------
# pub
# ------------------------------------------------------------------------------
bash $BASEDIR/scripts/pub/hello
bash $BASEDIR/scripts/pub/domain/list
bash $BASEDIR/scripts/pub/domain/list-enabled
bash $BASEDIR/scripts/pub/domain/get

footer <<< completed successfully
