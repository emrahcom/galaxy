#!/bin/bash
set -e

# ------------------------------------------------------------------------------
# this works only in trusted network
# ------------------------------------------------------------------------------

# ------------------------------------------------------------------------------
# environment
# ------------------------------------------------------------------------------
BASEDIR=$(dirname $0)
source $BASEDIR/common

header <<< "/api/admin/hello"
rm -f /tmp/api-admin-hello

# ------------------------------------------------------------------------------
# /api/admin/hello
# ------------------------------------------------------------------------------
curl -ks -X POST https://$APP_FQDN/api/admin/hello \
    --output-dir /tmp --output api-admin-hello \
    -H "Accept: application/json"
res=$(jq . /tmp/api-admin-hello)
out <<< "$res"

[[ "$(echo $res | jq -r .text)" = "null" ]] && exit 1

# ------------------------------------------------------------------------------
# completed
# ------------------------------------------------------------------------------
footer <<< "/api/admin/hello"
