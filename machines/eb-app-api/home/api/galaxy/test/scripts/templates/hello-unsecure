#!/bin/bash
set -e

# ------------------------------------------------------------------------------
# environment
# ------------------------------------------------------------------------------
BASEDIR=$(dirname $0)
source $BASEDIR/../common

SERVICE=$1
[[ -z "$2" ]] && NUM=0 || NUM=$2

# ------------------------------------------------------------------------------
# /api/<service>/hello (unsecure)
# ------------------------------------------------------------------------------
header <<< "/api/$SERVICE/hello (unsecure)"
rm -f $TMP/api-$SERVICE-hello-unsecure-*

curl -ks -X POST https://$APP_FQDN/api/$SERVICE/hello \
    --output-dir $TMP --output api-$SERVICE-hello-unsecure-$NUM \
    -H "Accept: application/json"
res=$(jq . $TMP/api-$SERVICE-hello-unsecure-$NUM)
out <<< "$res"

[[ -z "$(echo $res | jq .)" ]] && exit 1
[[ -z "$(echo $res | jq -r .text)" ]] && exit 1
[[ "$(echo $res | jq -r .text)" = "null" ]] && exit 1
footer <<< "/api/$SERVICE/hello (unsecure)"
