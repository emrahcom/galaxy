#!/bin/bash
set -e

# ------------------------------------------------------------------------------
# environment
# ------------------------------------------------------------------------------
BASEDIR=$(dirname $0)
source $BASEDIR/../../common

header <<< "/api/pub/domain/get"
rm -f /tmp/api-pub-domain-get-*

# ------------------------------------------------------------------------------
# /api/pub/domain/get (exists)
# ------------------------------------------------------------------------------
domainId=$(jq -r .[0].id /tmp/api-pub-domain-list-0)

curl -ks -X POST https://$APP_FQDN/api/pub/domain/get \
    --output-dir /tmp --output api-pub-domain-get-0 \
    -H "Accept: application/json" \
    -H "Content-Type: application/json" \
    --data @- << EOF
    {
        "id": "$domainId"
    }
EOF
res=$(jq . /tmp/api-pub-domain-get-0)
out <<< "exists:"
out <<< "$res"

[[ -z "$(echo $res | jq .[0])" ]] && exit 1
[[ "$(echo $res | jq -r .[0].id)" = "null" ]] && exit 1

# ------------------------------------------------------------------------------
# /api/pub/domain/get (not exists)
# ------------------------------------------------------------------------------
domainId=$(uuidgen)

curl -ks -X POST https://$APP_FQDN/api/pub/domain/get \
    --output-dir /tmp --output api-pub-domain-get-1 \
    -H "Accept: application/json" \
    -H "Content-Type: application/json" \
    --data @- << EOF
    {
        "id": "$domainId"
    }
EOF
res=$(jq . /tmp/api-pub-domain-get-1)
out <<< "not exists:"
out <<< "$res"

[[ "$res" != "[]" ]] && exit 1

# ------------------------------------------------------------------------------
# completed
# ------------------------------------------------------------------------------
footer <<< "/api/pub/domain/get"
