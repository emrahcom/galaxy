#!/bin/bash
set -e

BASEDIR=$(dirname $0)
TEMPLATES=$BASEDIR/../../templates
source $BASEDIR/../../common

[[ -z "$1" ]] && ID=1 || ID=$1
[[ -z "$2" ]] && NUM=1 || NUM=$2

# ------------------------------------------------------------------------------
# add many new domains
# ------------------------------------------------------------------------------
for i in $(seq 1 $NUM); do
    name="sub-$(date +'%s')-$i-$RANDOM.mydomain.corp"
    JSON=$(cat <<EOF
    {
        "name": "$name",
        "auth_type": "none",
        "auth_attr": {
        }
    }
EOF
)

    bash $TEMPLATES/action-member-id "$ID" "pri" "domain" "add" "$JSON" $i
done
