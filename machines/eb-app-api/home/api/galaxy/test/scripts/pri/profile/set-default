#!/bin/bash
set -e

BASEDIR=$(dirname $0)
TEMPLATES=$BASEDIR/../../templates
source $BASEDIR/../../common

profile_id=$(jq -r ".[0].id" $TMP/api-pri-profile-add-id-1)
profile_fake=$(uuidgen)

# ------------------------------------------------------------------------------
# set as default an existing profile
# ------------------------------------------------------------------------------
JSON=$(cat <<EOF
{
    "id": "$profile_id"
}
EOF
)

bash $TEMPLATES/action-member-id "pri" "profile" "set/default" "$JSON" 1

# ------------------------------------------------------------------------------
# set as default a nonexistent profile
# ------------------------------------------------------------------------------
JSON=$(cat <<EOF
{
    "id": "$profile_fake"
}
EOF
)

bash $TEMPLATES/action-member-empty "pri" "profile" "set/default" "$JSON" 1
