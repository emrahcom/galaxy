schedule_id=$(jq -r ".[0].id" \
    $TMP/api-pri-meeting-schedule-add-new-once-id-$ID-$IDX-res)

JSON=$(cat <<EOF
{
    "id": "$schedule_id",
    "name": "name-$RANDOM",
    "schedule_attr": {
      "type": "w",
      "started_at": "$(date -d "+3 hours" --iso-8601=minutes)",
      "duration": "20",
      "rep_end_type": "FAKE",
      "rep_end_at": "$(date -d "+90 days" --iso-8601=minutes)",
      "rep_every": "1",
      "rep_days": "0010100"
    }
}
EOF
)

bash $TEMPLATES/action-member-error $ID $SERVICE $CLASS $ACTION $TAG \
    "$JSON" $IDX

# ------------------------------------------------------------------------------
# try to add a new schedule (weekly) with invalid end_at
# end_at should be later than started_at
# ------------------------------------------------------------------------------
TAG="invalid-weekly-end-at"

schedule_id=$(jq -r ".[0].id" \
    $TMP/api-pri-meeting-schedule-add-new-once-id-$ID-$IDX-res)

JSON=$(cat <<EOF
{
    "id": "$schedule_id",
    "name": "name-$RANDOM",
    "schedule_attr": {
      "type": "w",
      "started_at": "$(date -d "+3 days" --iso-8601=minutes)",
      "duration": "20",
      "rep_end_type": "at",
      "rep_end_at": "$(date -d "+2 days" --iso-8601=minutes)",
      "rep_every": "1",
      "rep_days": "0010100"
    }
}
EOF
)

bash $TEMPLATES/action-member-error $ID $SERVICE $CLASS $ACTION $TAG \
    "$JSON" $IDX

# ------------------------------------------------------------------------------
# try to add a new schedule (weekly) with invalid rep_every
# rep_every should be less than 31
# ------------------------------------------------------------------------------
TAG="invalid-weekly-rep-every"

schedule_id=$(jq -r ".[0].id" \
    $TMP/api-pri-meeting-schedule-add-new-once-id-$ID-$IDX-res)

JSON=$(cat <<EOF
{
    "id": "$schedule_id",
    "name": "name-$RANDOM",
    "schedule_attr": {
      "type": "w",
      "started_at": "$(date -d "+3 hours" --iso-8601=minutes)",
      "duration": "20",
      "rep_end_type": "at",
      "rep_end_at": "$(date -d "+90 days" --iso-8601=minutes)",
      "rep_every": "50",
      "rep_days": "0010100"
    }
}
EOF
)

bash $TEMPLATES/action-member-error $ID $SERVICE $CLASS $ACTION $TAG \
    "$JSON" $IDX

# ------------------------------------------------------------------------------
# try to add a new schedule (weekly) with invalid rep_days
# rep_days should be '[01]{7}'
# invalid character in this example
# ------------------------------------------------------------------------------
TAG="invalid-weekly-rep-days-1"

schedule_id=$(jq -r ".[0].id" \
    $TMP/api-pri-meeting-schedule-add-new-once-id-$ID-$IDX-res)

JSON=$(cat <<EOF
{
    "id": "$schedule_id",
    "name": "name-$RANDOM",
    "schedule_attr": {
      "type": "w",
      "started_at": "$(date -d "+3 hours" --iso-8601=minutes)",
      "duration": "20",
      "rep_end_type": "at",
      "rep_end_at": "$(date -d "+90 days" --iso-8601=minutes)",
      "rep_every": "2",
      "rep_days": "0010102"
    }
}
EOF
)

bash $TEMPLATES/action-member-error $ID $SERVICE $CLASS $ACTION $TAG \
    "$JSON" $IDX

# ------------------------------------------------------------------------------
# try to add a new schedule (weekly) with invalid rep_days
# rep_days should be '[01]{7}'
# longer string
# ------------------------------------------------------------------------------
TAG="invalid-weekly-rep-days-2"

schedule_id=$(jq -r ".[0].id" \
    $TMP/api-pri-meeting-schedule-add-new-once-id-$ID-$IDX-res)

JSON=$(cat <<EOF
{
    "id": "$schedule_id",
    "name": "name-$RANDOM",
    "schedule_attr": {
      "type": "w",
      "started_at": "$(date -d "+3 hours" --iso-8601=minutes)",
      "duration": "20",
      "rep_end_type": "at",
      "rep_end_at": "$(date -d "+90 days" --iso-8601=minutes)",
      "rep_every": "2",
      "rep_days": "0010101010101"
    }
}
EOF
)

bash $TEMPLATES/action-member-error $ID $SERVICE $CLASS $ACTION $TAG \
    "$JSON" $IDX

# ------------------------------------------------------------------------------
# try to add a new schedule (weekly) with invalid rep_days
# rep_days should be '[01]{7}'
# shorter string
# ------------------------------------------------------------------------------
TAG="invalid-weekly-rep-days-3"

schedule_id=$(jq -r ".[0].id" \
    $TMP/api-pri-meeting-schedule-add-new-once-id-$ID-$IDX-res)

JSON=$(cat <<EOF
{
    "id": "$schedule_id",
    "name": "name-$RANDOM",
    "schedule_attr": {
      "type": "w",
      "started_at": "$(date -d "+3 hours" --iso-8601=minutes)",
      "duration": "20",
      "rep_end_type": "at",
      "rep_end_at": "$(date -d "+90 days" --iso-8601=minutes)",
      "rep_every": "2",
      "rep_days": "001"
    }
}
EOF
)

bash $TEMPLATES/action-member-error $ID $SERVICE $CLASS $ACTION $TAG \
    "$JSON" $IDX

# ------------------------------------------------------------------------------
# try to add a new schedule (weekly) with invalid rep_days
# rep_days should be '[01]{7}'
# no selected day, all 0
# ------------------------------------------------------------------------------
TAG="invalid-weekly-rep-days-4"

schedule_id=$(jq -r ".[0].id" \
    $TMP/api-pri-meeting-schedule-add-new-once-id-$ID-$IDX-res)

JSON=$(cat <<EOF
{
    "id": "$schedule_id",
    "name": "name-$RANDOM",
    "schedule_attr": {
      "type": "w",
      "started_at": "$(date -d "+3 hours" --iso-8601=minutes)",
      "duration": "20",
      "rep_end_type": "at",
      "rep_end_at": "$(date -d "+90 days" --iso-8601=minutes)",
      "rep_every": "2",
      "rep_days": "0000000"
    }
}
EOF
)

