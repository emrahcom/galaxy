#!/bin/bash
set -e

BASEDIR=$(dirname $0)
TEMPLATES=$BASEDIR/../../templates
source $BASEDIR/../../common

# ------------------------------------------------------------------------------
# get invite list (limit 2, offset 1)
# ------------------------------------------------------------------------------
meeting_id=$(jq -r ".[0].id" $TMP/api-pri-meeting-add-id-1)
JSON=$(cat <<EOF
{
    "meeting_id": "$meeting_id",
    "limit": 2,
    "offset": 1
}
EOF
)

bash $TEMPLATES/action-member-id "pri" "invite" "list" "$JSON" 3
