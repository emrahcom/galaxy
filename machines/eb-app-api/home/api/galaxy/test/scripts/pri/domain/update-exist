#!/bin/bash
set -e

BASEDIR=$(dirname $0)
TEMPLATES=$BASEDIR/../../templates
source $BASEDIR/../../common

# ------------------------------------------------------------------------------
# update with valid post
# ------------------------------------------------------------------------------
domain_id=$(jq -r ".[0].id" $TMP/api-pri-domain-add-id-1)
name="sub-$(date +'%s')-$RANDOM.mydomain.corp"
JSON=$(cat <<EOF
{
    "id": "$domain_id",
    "name": "$name",
    "auth_type": "token",
    "auth_attr": {
       "app_id": "myappid",
       "app_key": "myappsecret"
    }
}
EOF
)

bash $TEMPLATES/action-member-id "pri" "domain" "update" "$JSON" 1
