#!/bin/bash
set -e

BASEDIR=$(dirname $0)
TEMPLATES=$BASEDIR/../../templates
source $BASEDIR/../../common

[[ -z "$1" ]] && SET=1 || SET=$1

# ------------------------------------------------------------------------------
# get bymeeting for an existing schedule
# ------------------------------------------------------------------------------
meeting_id=$(jq -r ".[1].id" $TMP/api-pri-meeting-list-id-$SET-1-res)
JSON=$(cat <<EOF
{
    "id": "$meeting_id"
}
EOF
)

bash $TEMPLATES/action-member-attr "$SET" "pri" "meeting/schedule" \
    "get/bymeeting" "id" "$JSON" 1
