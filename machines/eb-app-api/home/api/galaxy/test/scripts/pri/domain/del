#!/bin/bash
set -e

# ------------------------------------------------------------------------------
# environment
# ------------------------------------------------------------------------------
BASEDIR=$(dirname $0)
source $BASEDIR/../../common

header <<< "/api/pri/domain/del"
rm -f /tmp/api-pri-domain-del-*

# ------------------------------------------------------------------------------
# /api/pri/domain/del (exists)
# ------------------------------------------------------------------------------
cookieJar=$(cat /tmp/kratos-login-cookie)
domain_id=$(jq -r .[0].id /tmp/api-pri-domain-add-0)

curl -ks -X POST https://$APP_FQDN/api/pri/domain/del \
    --output-dir /tmp --output api-pri-domain-del-0 \
    --cookie $cookieJar --cookie-jar $cookieJar \
    -H "Accept: application/json" \
    -H "Content-Type: application/json" \
    --data @- << EOF
    {
        "id": "$domain_id"
    }
EOF
res=$(jq . /tmp/api-pri-domain-del-0)
out <<< "exists"
out <<< "$res"

[[ -z "$(echo $res | jq .[0])" ]] && exit 1
[[ "$(echo $res | jq -r .[0].id)" = "null" ]] && exit 1

# ------------------------------------------------------------------------------
# /api/pri/domain/del (not exists)
# ------------------------------------------------------------------------------
cookieJar=$(cat /tmp/kratos-login-cookie)
domainId=$(uuidgen)

curl -ks -X POST https://$APP_FQDN/api/pri/domain/del \
    --output-dir /tmp --output api-pri-domain-del-1 \
    --cookie $cookieJar --cookie-jar $cookieJar \
    -H "Accept: application/json" \
    -H "Content-Type: application/json" \
    --data @- << EOF
    {
        "id": "$domain_id"
    }
EOF
res=$(jq . /tmp/api-pri-domain-del-1)
out <<< "not exists"
out <<< "$res"

[[ "$res" != "[]" ]] && exit 1

# ------------------------------------------------------------------------------
# completed
# ------------------------------------------------------------------------------
footer <<< "/api/pri/domain/del"
