#!/bin/bash
set -e

BASEDIR=$(dirname $0)
TEMPLATES=$BASEDIR/../../templates
source $BASEDIR/../../common

room_id=$(jq -r ".[0].id" $TMP/api-pri-room-add-id-0)
room_fake=$(uuidgen)

# ------------------------------------------------------------------------------
# add a new meeting (hidden)
# ------------------------------------------------------------------------------
name="meeting-$(date +'%s')-$RANDOM"
JSON=$(cat <<EOF
{
    "room_id": "$room_id",
    "name": "$name",
    "info": "some meeting info",
    "schedule_type": "permanent",
    "schedule_attr": "{}",
    "hidden": true,
    "restricted": false
}
EOF
)

bash $TEMPLATES/action-member-id "pri" "meeting" "add" "$JSON" 0

# ------------------------------------------------------------------------------
# add a new meeting (non-hidden)
# ------------------------------------------------------------------------------
name="meeting-$(date +'%s')-$RANDOM"
JSON=$(cat <<EOF
{
    "room_id": "$room_id",
    "name": "$name",
    "info": "some meeting info",
    "schedule_type": "permanent",
    "schedule_attr": "{}",
    "hidden": false,
    "restricted": false
}
EOF
)

bash $TEMPLATES/action-member-id "pri" "meeting" "add" "$JSON" 1

# ------------------------------------------------------------------------------
# try to add a new meeting for a nonexistent room
# ------------------------------------------------------------------------------
name="meeting-$(date +'%s')-$RANDOM"
JSON=$(cat <<EOF
{
    "room_id": "$room_fake",
    "name": "$name",
    "info": "some meeting info",
    "schedule_type": "permanent",
    "schedule_attr": "{}",
    "hidden": true,
    "restricted": false
}
EOF
)

bash $TEMPLATES/action-member-error "pri" "meeting" "add" "$JSON" 0
