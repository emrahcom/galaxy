#!/bin/bash
set -e

BASEDIR=$(dirname $0)
TEMPLATES=$BASEDIR/../../templates
source $BASEDIR/../../../config
source $BASEDIR/../../common

[[ -z "$1" ]] && ID=1 || ID=$1
# meeting index
[[ -z "$2" ]] && IDX=1 || IDX=$2
# room index
[[ -z "$3" ]] && IDX2=1 || IDX2=$3

SERVICE="pri"
CLASS="meeting"
ACTION="add"
TAG="new-scheduled"
ATTR="id"

# ------------------------------------------------------------------------------
# add new meeting
# ------------------------------------------------------------------------------
room_id=$(jq -r ".[0].id" $TMP/api-pri-room-add-new-id-$ID-$IDX2-res)

hidden=true
schedule_type="scheduled"
name="meeting-$(date +'%s')-$i-$RANDOM"
JSON=$(cat <<EOF
{
    "room_id": "$room_id",
    "name": "$name",
    "info": "some meeting info",
    "schedule_type": "$schedule_type",
    "hidden": $hidden,
    "restricted": true,
    "subscribable": true
}
EOF
)

bash $TEMPLATES/action-member-attr $ID $SERVICE $CLASS $ACTION $TAG $ATTR \
    "$JSON" $IDX
