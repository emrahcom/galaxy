#!/bin/bash
set -e

BASEDIR=$(dirname $0)
TEMPLATES=$BASEDIR/../../templates
source $BASEDIR/../../common

[[ -z "$1" ]] && ID=1 || ID=$1

# ------------------------------------------------------------------------------
# get member list (limit 2, no offset)
# ------------------------------------------------------------------------------
meeting_id=$(jq -r ".[0].id" $TMP/api-pri-meeting-add-id-$ID-1-res)
JSON=$(cat <<EOF
{
    "meeting_id": "$meeting_id",
    "limit": 2
}
EOF
)

bash $TEMPLATES/action-member-id "$ID" "pri" "member" "list" "$JSON" 2
