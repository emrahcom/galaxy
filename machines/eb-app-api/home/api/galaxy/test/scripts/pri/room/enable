#!/bin/bash
set -e

# ------------------------------------------------------------------------------
# environment
# ------------------------------------------------------------------------------
BASEDIR=$(dirname $0)
source $BASEDIR/../../common

header <<< "/api/pri/room/enable"
rm -f /tmp/api-pri-room-enable-*

cookieJar=$(cat /tmp/kratos-login-cookie)

# ------------------------------------------------------------------------------
# /api/pri/room/enable (exists)
# ------------------------------------------------------------------------------
roomId=$(jq -r .[0].id /tmp/api-pri-room-add-0)

curl -ks -X POST https://$APP_FQDN/api/pri/room/enable \
    --output-dir /tmp --output api-pri-room-enable-0 \
    --cookie $cookieJar --cookie-jar $cookieJar \
    -H "Accept: application/json" \
    -H "Content-Type: application/json" \
    --data @- << EOF
    {
        "id": "$roomId"
    }
EOF
res=$(jq . /tmp/api-pri-room-enable-0)
out <<< "exists:"
out <<< "$res"

[[ -z "$(echo $res | jq .[0])" ]] && exit 1
[[ "$(echo $res | jq -r .[0].id)" = "null" ]] && exit 1

# ------------------------------------------------------------------------------
# /api/pri/room/enable (not exists)
# ------------------------------------------------------------------------------
roomId=$(uuidgen)

curl -ks -X POST https://$APP_FQDN/api/pri/room/enable \
    --output-dir /tmp --output api-pri-room-enable-1 \
    --cookie $cookieJar --cookie-jar $cookieJar \
    -H "Accept: application/json" \
    -H "Content-Type: application/json" \
    --data @- << EOF
    {
        "id": "$roomId"
    }
EOF
res=$(jq . /tmp/api-pri-room-enable-1)
out <<< "not exists:"
out <<< "$res"

[[ "$res" != "[]" ]] && exit 1

# ------------------------------------------------------------------------------
# completed
# ------------------------------------------------------------------------------
footer <<< "/api/pri/room/enable"
