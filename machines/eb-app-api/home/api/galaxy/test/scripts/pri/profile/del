#!/bin/bash
set -e

BASEDIR=$(dirname $0)
TEMPLATES=$BASEDIR/../../templates
source $BASEDIR/../../common

profile_id=$(jq -r ".[0].id" $TMP/api-pri-profile-add-id-0)
profile_fake=$(uuidgen)

# ------------------------------------------------------------------------------
# delete an existing profile
# ------------------------------------------------------------------------------
JSON=$(cat <<EOF
{
    "id": "$profile_id"
}
EOF
)

bash $TEMPLATES/action-member-id "pri" "profile" "del" "$JSON" 0

# ------------------------------------------------------------------------------
# delete a nonexistent profile
# ------------------------------------------------------------------------------
JSON=$(cat <<EOF
{
    "id": "$profile_fake"
}
EOF
)

bash $TEMPLATES/action-member-empty "pri" "profile" "del" "$JSON" 0
