#!/bin/bash
set -e

BASEDIR=$(dirname $0)
TEMPLATES=$BASEDIR/../../templates
source $BASEDIR/../../common

[[ -z "$1" ]] && NUM=1 || NUM=$1

# ------------------------------------------------------------------------------
# add many new invites
# ------------------------------------------------------------------------------
meeting_id=$(jq -r ".[0].id" $TMP/api-pri-meeting-add-id-0)
for i in $(seq 1 $NUM); do
    JSON=$(cat <<EOF
    {
        "meeting_id": "$meeting_id"
    }
EOF
)

    bash $TEMPLATES/action-member-id "pri" "invite" "add" "$JSON" $i
done
