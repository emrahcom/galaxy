#!/bin/bash
set -e

BASEDIR=$(dirname $0)
TEMPLATES=$BASEDIR/../../templates
source $BASEDIR/../../common

[[ -z "$1" ]] && ID=1 || ID=$1

# ------------------------------------------------------------------------------
# try to add an already existing domain
# duplicated (identity_id, name)
# ------------------------------------------------------------------------------
name=$(jq -r ".[0].name" $TMP/api-pri-domain-get-id-$ID-1-res)
JSON=$(cat <<EOF
{
    "name": "$name",
    "auth_type": "none",
    "auth_attr": {
        "url": "https://meet.jit.si"
    }
}
EOF
)

bash $TEMPLATES/action-member-error "$ID" "pri" "domain" "add" "$JSON" 1
