#!/bin/bash
set -e

# ------------------------------------------------------------------------------
header() {
    while IFS= read -r line; do
        printf "\033[0;31m>>> %s\033[0m\n" "$line"
    done
}

# ------------------------------------------------------------------------------
footer() {
    while IFS= read -r line; do
        printf "\033[0;31m>>> %s\033[0m\n" "$line"
    done
}

# ------------------------------------------------------------------------------
out() {
    while IFS= read -r line; do
        printf "\033[0;31m>>>\033[0m \033[0;33m%s\033[0m\n" "$line"
    done
}
