#!/bin/bash
set -e

# ------------------------------------------------------------------------------
# environment
# ------------------------------------------------------------------------------
[[ -z "$KRATOS_FQDN" ]] && KRATOS_FQDN=kratos.galaxy.corp
[[ -z "$APP_FQDN" ]] && APP_FQDN=app.galaxy.corp

mkdir -p /tmp/galaxy
TMP=/tmp/galaxy

# ------------------------------------------------------------------------------
# header
# ------------------------------------------------------------------------------
header() {
    while IFS= read -r line; do
        printf "\033[0;31m>>> %s\033[0m\n" "$line"
    done
}

# ------------------------------------------------------------------------------
# footer
# ------------------------------------------------------------------------------
footer() {
    while IFS= read -r line; do
        printf "\033[0;31m>>>\033[0m \033[0;31m%s\033[0m\n" "$line"
        printf "\n"
    done
}

# ------------------------------------------------------------------------------
# out
# ------------------------------------------------------------------------------
out() {
    while IFS= read -r line; do
        printf "\033[0;31m>>>\033[0m \033[0;38m%s\033[0m\n" "$line"
    done
}
