[Unit]
Description=Kratos UI
After=network-online.target

[Service]
Environment=KRATOS_ADMIN_URL=http://eb-kratos:4434/
Environment=KRATOS_PUBLIC_URL=http://eb-kratos:4433/
Environment=KRATOS_BROWSER_URL=https://___KRATOS_FQDN___/
Environment=BASE_URL=https://___APP_FQDN___/
Environment=PORT=3000
Environment=SECURITY_MODE=cookie
User=ui
Group=ui
WorkingDirectory=/home/ui/kratos
ExecStart=npm run serve
Restart=always
RestartSec=2s

[Install]
WantedBy=multi-user.target
